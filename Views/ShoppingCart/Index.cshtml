@model ShoppingCartViewModel

<h2>Koszyk</h2>
<h4>Oto Twoje wybrane ciasta</h4>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Ilosc</th>
            <th>Nazwa ciast</th>
            <th class="text-right">Cena</th>
            <th class="text-right">Suma</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var line in Model.ShoppingCart.ShoppingCartItems)
        {
<tr>
    <td class="text-center">@line.Amount</td>
    <td class="text-left">@line.Pie.Name</td>
    <td class="text-right">@line.Pie.Price.ToString("c")</td>
    <td class="text-right">
        @((line.Amount * line.Pie.Price).ToString("c"))
    </td>
</tr>}
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-right">Suma:</td>
            <td class="text-right">
                @Model.ShoppingCartTotal.ToString("c")
            </td>
        </tr>
    </tfoot>
</table>

<div class="text-center">
    <a class="btn btn-primary" asp-controller="Order" asp-action="Checkout">Zamow</a>
</div>